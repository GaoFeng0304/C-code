小程序：编写一个可以加减乘除的小程序
6.编写一个加减乘除的计算器
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include <stdlib.h>
int main()
{
	float a, b;
	int c;
	while (1)
	{
		printf("*****************\n");
		printf("1.add*******2.sub\n");
		printf("3.mul*******4.div\n");
                printf("*****************\n");
		printf("请选择：");
		scanf("%d", &c);
		switch (c)
		{
		case 1:
			printf("请输入你想计算的数字\n");
			scanf("%f%f", &a, &b);
			printf("%f\n", a + b);
			break;
		case 2:
			printf("请输入你想计算的数字");
			scanf("%f%f", &a, &b);
			printf("%f\n",  a - b);
			break;
		case 3:
			printf("请输入你想计算的数字");
			scanf("%f%f", &a, &b);
			printf("%f\n", a*b);
			break;
		case 4:
			printf("请输入你想计算的数字");
			scanf("%f%f", &a, &b);
			if (b == 0)
			{
				printf("没有意义");
			}
			else printf("%f\n",a / b);
			break;
			printf("%f\n", a + b);
		}
	}
	printf("\n");
	system("pause");
	return 0;
}

